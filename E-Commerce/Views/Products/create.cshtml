@using E_Commerce.Data
@model product
@{
    ViewData["title"] = "Create Nee Product";

    
   //using view bag id in this function refers to value field and the appear is Name 
    var category = new SelectList(ViewBag.categoryId, "Id", "Name");
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h2 class="text-center">Add New Product</h2>
        </p>
    </div>
    <div class="col-md-6 offset-3">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="controle-lable"></label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="controle-lable"></label>
                <textarea asp-for="Description" class="form-control" rows=3></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="controle-lable"></label>
                <input asp-for="price" class="form-control" rows=3> 
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgUrl" class="controle-lable"></label>
                <input asp-for="ImgUrl" class="form-control" rows=3>
                <span asp-validation-for="ImgUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductBrand" class="controle-lable"></label>
                <select asp-for="ProductBrand" asp-items="@Html.GetEnumSelectList<ProductBrand>()" class="form-control" rows=3></select>
                <span asp-validation-for="ProductBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Category Name  </label>
                <select asp-for="categoryId" asp-items="@category" class="form-control" rows=3></select>
                <span asp-validation-for="categoryId" class="text-danger"></span>
            </div>
            
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                <a asp-action="Index" class="btn btn-outline-secondary"> Show All Products</a>
            </div>
            
        </form>
    </div>
</div>

@*//to use validations without going to the server which helping in performance  *@

@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
