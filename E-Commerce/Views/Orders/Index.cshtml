@model IEnumerable<CartItem>
@{
    ViewData["title"] = "shopping cart summary";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <div class="text-center ">
            <h3>
                shooping cart summary
            </h3>
        </div>
        <table class="table table-hover ">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>SubTotal</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model){
                    <tr>
                        <td class="align-middle">
                            @item.Amount
                        </td>
                        <td class="align-middle">
                            @item.Product.Name
                        </td ">
                        <td class="align-middle">
                            @item.Product.price
                        </td >
                        <td class="align-middle">@((item.Product.price * item.Amount).ToString("c"))</td>
                        <td class="align-middle">
                               <a asp-controller="Orders" asp-action="AddToCart" asp-route-id="@item.Product.Id">
                                <i class= "fa fa-plus"></i>
                                
                            </a>
                            <a asp-controller="Orders" asp-action="RemoveFromCart"asp-route-id="@item.Product.Id">

                                <i class= "fa fa-minus"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td class="collapse-2" ></td>
                    <td> <STRONG>Total: </STRONG> </td>
                    <td>@ViewBag.Total </td>
                </tr>
            </tfoot>
        </table>
        <div class="text-center">
            <div class="btn btn-group">
                <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">
<i class=" fas fa-regular fa-shooping-cart"> Continue Order</i>
                </a>
                <div class="paypal-button"></div>
                <a class="btn btn-outline-success" asp-controller="Orders" asp-action="">
<i class=" fas fa-regular fa-check"> Finish Order</i>
                </a>

            </div>
        </div>
    </div>

</div>

